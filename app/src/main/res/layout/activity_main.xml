<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Title for the Ride-Sharing System -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Ride-Sharing System"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:gravity="center" />

    <!-- Button to Add Driver -->
    <Button
        android:id="@+id/addDriverButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Driver"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_blue_dark" />

    <!-- Button to Request a Ride -->
    <Button
        android:id="@+id/requestRideButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Request Ride"
        app:layout_constraintTop_toBottomOf="@id/addDriverButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_green_dark" />

    <!-- Button to Display Drivers -->
    <Button
        android:id="@+id/displayDriversButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Display Drivers"
        app:layout_constraintTop_toBottomOf="@id/requestRideButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_orange_dark" />

    <!-- Button to Display Riders -->
    <Button
        android:id="@+id/displayRidersButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Display Riders"
        app:layout_constraintTop_toBottomOf="@id/displayDriversButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_red_dark" />

    <!-- Button to Display Rides -->
    <Button
        android:id="@+id/displayRidesButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Display Rides"
        app:layout_constraintTop_toBottomOf="@id/displayRidersButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/darker_gray" />

    <!-- Button to Clear Output -->
    <Button
        android:id="@+id/clearOutputButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Clear Output"
        app:layout_constraintTop_toBottomOf="@id/displayRidesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_red_light" />

    <!-- Text View to Display Output (e.g., ride details) -->
    <TextView
        android:id="@+id/outputTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Output will be displayed here"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/clearOutputButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        android:gravity="center"
        android:textColor="@android:color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>
